{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recette.name }}</td>
            </tr>
            <tr>
                <th>Nb_personnes</th>
                <td>{{ recette.nbPersonnes }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recettes') }}">back to list</a>

    {% if app.user and connectedUser == recette.user %}
        <a href="{{ path('recette_edit', {'id': recette.id}) }}">edit</a>
        {{ include('recette/_delete_form.html.twig') }}
    {% endif %}

    
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}
    <h1>Recette index</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Source</th>
                <th>Nbr de couverts</th>
                <th>Description</th>
                <th>ingr√©dients</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                {# <td>{{ recette.id }}</td> #}
                <td>{{ recette.name }}</td>
                <td>{{ recette.source }}</td>
                <td>{{ recette.nbPersonnes }}</td>
                <td>{{ recette.description }}</td>
                <td>{% for ingredient in ingredients %}
                        {% if ingredient.recette() and ingredient.recette().id() == recette.id%}
                            <p>{{ ingredient }}</p>
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('recette_show', {'id': recette.id}) }}">show</a>
                    {% if app.user and connectedUser == recette.user %}
                        <a href="{{ path('recette_edit', {'id': recette.id}) }}">edit</a>
                        <a>{{ include('recette/_delete_form.html.twig') }}</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}">Create new</a>
{% endblock %}

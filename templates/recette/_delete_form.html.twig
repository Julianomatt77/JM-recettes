<form method="post" action="{{ path('recette_delete', {'id': recette.id}) }}" 
    onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-flex justify-content-end mt-2 pb-0 mb-0">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
    <button class="btn"><i class="bi bi-trash-fill" style="color: red"></i></button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Editer mes informations{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center text-center">
    <div>
    {{ form_start(registrationForm) }} 
        <h1 class="mb-4">Edition de mon compte</h1>

        <div class="mt-4 mb-5">                                  
                <div class="mb-4 pb-2">
                    Nom d'utilisateur                    
                </div>

                <div class="mb-4 pb-2">
                    {{ form_widget(registrationForm.username) }}
                </div>
             
                <div class="mb-4 pb-2">
                    Adresse e-mail
                </div>
                <div class="mb-4 pb-2">
                    {{ form_widget(registrationForm.email) }}
                </div>

                <div class="mb-4 pb-2">
                    Mot de passe
                </div>
                <div class="mb-4 pb-2">
                    {{ form_widget(registrationForm.plainPassword.first, {'value': user.password}) }}
                </div>

                <div class="mb-4 pb-2">
                    Veuillez confirmer votre mot de passe
                </div>
                <div class="mb-4 pb-2">
                    {{ form_widget(registrationForm.plainPassword.second, {'value': user.password}) }}
                </div>
        </div>    

        <div class="mt-4 pt-2 d-flex justify-content-evenly">
            <a>{{ form_widget(registrationForm.submit, {
                    'label': "Modifier mes infos"}) }}</a>

            <a class="btn" href="{{ path('app_account', {'id': app.user.id}) }}">Retour Ã  mon compte</a>
        </div>

        {{ form_row(registrationForm._token) }}
        {{ form_end(registrationForm, {'render_rest': false}) }}
    </div>

</div>

{% endblock %}
